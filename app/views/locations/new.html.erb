<h1>Submit a New Location!</h1>

<div class="callout">
  <%= form_for(@location) do |f| %>
    <% if @location.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@location.errors.count, "error") %> prohibited this event from being saved:</p>

      <ul>
        <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name, "Location Name:" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :address, "Address:" %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :city, "City:" %>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state, "State:" %>
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :zip, "Zip Code:" %>
      <%= f.text_field :zip %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
  
</div>
